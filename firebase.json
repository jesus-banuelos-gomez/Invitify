{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/html/index.html"
      }
    ],
    "headers": [
      {
        "source": "/js/**",  
        "headers": [{"key": "Cache-Control", "value": "max-age=3600"}]
      },
      {
        "source": "/css/**", 
        "headers": [{"key": "Cache-Control", "value": "max-age=3600"}]
      },
      {
        "source": "/images/**", 
        "headers": [{"key": "Cache-Control", "value": "max-age=86400"}]
      }
    ]
  }
}